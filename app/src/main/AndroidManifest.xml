<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.nsa.welshpharmacy">

    <!-- App permissions -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <uses-feature android:name="android.hardware.location.network" />
    <uses-feature android:name="android.hardware.location.gps" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_custom"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".controller.UserFilterPreferenceActivity"
            android:screenOrientation="portrait"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".controller.listPharmacies.ListPharmaciesActivity"
            android:exported="false"/>
        <activity
            android:name=".controller.PharmacyMapActivity"
            android:label="@string/title_activity_pharmacy_map"
            android:exported="false"/>
        <activity
            android:name=".controller.listPharmacies.EmailPharmacyActivity"
            android:label="@string/title_activity_email_pharmacy"
            android:theme="@style/AppTheme.NoActionBar"
            android:exported="false"/>

        <!-- Connect the app with google play services including maps -->
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="AIzaSyCahqq_aJohqGLFIgMLUmrXKjQZPSLK8HU" />
    </application>

