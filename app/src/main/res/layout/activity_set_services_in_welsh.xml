<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/setWelshServices">

    <android.support.v7.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/services_in_welsh"
        android:textSize="24sp" />

    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <android.support.v7.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="start"
            android:text="@string/service_alcohol"
            android:textSize="18sp" />

        <ToggleButton
            android:id="@+id/toggleButton"
            android:layout_width="105dp"
            android:layout_height="45dp"
            android:layout_gravity="end"
            android:gravity="end"
            android:textOff="@string/toggle_unavailable"
            android:textOn="@string/toggle_available"
            android:textSize="12sp" />

    </android.support.v7.widget.LinearLayoutCompat>

    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <android.support.v7.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="start"
            android:text="@string/service_flu"
            android:textSize="18sp" />

        <ToggleButton
            android:id="@+id/toggleButton2"
            android:layout_width="105dp"
            android:layout_height="45dp"
            android:layout_gravity="end"
            android:gravity="end"
            android:textOff="@string/toggle_unavailable"
            android:textOn="@string/toggle_available"
            android:textSize="12sp" />

    </android.support.v7.widget.LinearLayoutCompat>

    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <android.support.v7.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="start"
            android:text="@string/service_health"
            android:textSize="18sp" />

        <ToggleButton
            android:id="@+id/toggleButton3"
            android:layout_width="105dp"
            android:layout_height="45dp"
            android:layout_gravity="end"
            android:gravity="end"
            android:textOff="@string/toggle_unavailable"
            android:textOn="@string/toggle_available"
            android:textSize="12sp" />

    </android.support.v7.widget.LinearLayoutCompat>

    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <android.support.v7.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="start"
            android:text="@string/service_ailments"
            android:textSize="18sp" />

        <ToggleButton
            android:id="@+id/toggleButton4"
            android:layout_width="105dp"
            android:layout_height="45dp"
            android:layout_gravity="end"
            android:gravity="end"
            android:textOff="@string/toggle_unavailable"
            android:textOn="@string/toggle_available"
            android:textSize="12sp"/>

    </android.support.v7.widget.LinearLayoutCompat>
    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <android.support.v7.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="start"
            android:text="@string/service_smoking"
            android:textSize="18sp" />

        <ToggleButton
            android:id="@+id/toggleButton5"
            android:layout_width="105dp"
            android:layout_height="45dp"
            android:layout_gravity="end"
            android:gravity="end"
            android:textOff="@string/toggle_unavailable"
            android:textOn="@string/toggle_available"
            android:textSize="12sp" />

    </android.support.v7.widget.LinearLayoutCompat>


    <Button
        android:id="@+id/button"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="@string/save_button" />



</android.support.v7.widget.LinearLayoutCompat>